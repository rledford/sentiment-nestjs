{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "html"],
  "testEnvironment": "node",
  "collectCoverageFrom": ["<rootDir>/src/**/*.ts"],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "test-utils",
    "test-config",
    "interfaces",
    "jestGlobalMocks.ts",
    "swagger",
    "test",
    ".module.ts",
    "<rootDir>/src/main.ts",
    ".mock.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
